{
  "name": "@gohorse/npm-application",
  "version": "2.1.4",
  "description": "GoHorse is a Git-based blockchain. Library with features for building executable applications.",
  "bin": "js/index.js",
  "main": "js/index.js",
  "types": "js/index.d.ts",
  "scripts": {
    "format": "prettier --write \"ts/**/*.ts\" \"test/**/*.ts\" \"js/**/*.js\"",
    "lint": "eslint \"ts/**/*.ts\"",
    "format+lint": "npm run format && npm run lint",
    "test": "jest --config jest.config.ts",
    "build": "tsc",
    "build:prod": "npm run build && npm run format+lint && npm run test",
    "start": "ts-node ./ts/index.ts",
    "stop": "ts-node ./ts/index.ts /stop",
    "prepare": "npm run build",
    "version": "npm run build:prod && git add --all",
    "postversion": "git push -u origin HEAD && git push origin --tags"
  },
  "files": [
    "js/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sergiocabral/Blockchain.GoHorse.git"
  },
  "author": {
    "name": "Sergio Cabral",
    "email": "gohorse@sergiocabral.com",
    "url": "https://sergiocabral.com/"
  },
  "keywords": [
    "gohorse",
    "coin",
    "blockcahin",
    "cryptocurrency",
    "cabroncoin",
    "sergiocabral"
  ],
  "license": "GoHorse Blockchain Â© 2021 by sergiocabral.com is licensed under CC BY 4.0. To view a copy of this license, visit http://creativecommons.org/licenses/by/4.0/",
  "bugs": {
    "url": "https://github.com/sergiocabral/Blockchain.GoHorse/issues"
  },
  "homepage": "https://github.com/sergiocabral/Blockchain.GoHorse/tree/npm-application",
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.29",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.5.1",
    "prettier": "^2.6.2",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "@gohorse/npm-bus": "^1.0.4",
    "@gohorse/npm-core": "^1.0.5",
    "@gohorse/npm-i18n": "^1.1.0",
    "@gohorse/npm-websocket": "^1.0.6",
    "@sergiocabral/helper": "^6.4.0",
    "tslib": "^2.4.0"
  }
}
