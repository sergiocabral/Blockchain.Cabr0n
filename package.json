{
  "name": "@gohorse/npm-twitch",
  "version": "1.0.2",
  "description": "GoHorse is a Git-based blockchain. Library with features involving Twitch.",
  "main": "js/index.js",
  "types": "js/index.d.ts",
  "scripts": {
    "format": "prettier --write \"ts/**/*.ts\" \"test/**/*.ts\" \"js/**/*.js\"",
    "lint": "eslint \"ts/**/*.ts\"",
    "format+lint": "npm run format && npm run lint",
    "test": "jest --config jest.config.ts",
    "build": "tsc",
    "build:prod": "npm run build && npm run format+lint && npm run test",
    "start": "ts-node ./ts/index.ts",
    "stop": "ts-node ./ts/index.ts --stop",
    "prepare": "npm run build",
    "version": "npm run build:prod && git add --all",
    "postversion": "git push -u origin HEAD && git push origin --tags"
  },
  "files": [
    "js/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sergiocabral/Blockchain.GoHorse.git"
  },
  "author": {
    "name": "Sergio Cabral",
    "email": "gohorse@sergiocabral.com",
    "url": "https://sergiocabral.com/"
  },
  "keywords": [
    "gohorse",
    "coin",
    "blockcahin",
    "cryptocurrency",
    "cabroncoin",
    "sergiocabral"
  ],
  "license": "GoHorse Blockchain Â© 2021 by sergiocabral.com is licensed under CC BY 4.0. To view a copy of this license, visit http://creativecommons.org/licenses/by/4.0/",
  "bugs": {
    "url": "https://github.com/sergiocabral/Blockchain.GoHorse/issues"
  },
  "homepage": "https://github.com/sergiocabral/Blockchain.GoHorse/tree/npm-twitch",
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.10",
    "@types/tmi.js": "^1.8.1",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.4.7",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.4.0",
    "tslib": "^2.3.1",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "@gohorse/npm-core": "^1.0.4",
    "@sergiocabral/helper": "^2.2.1",
    "tmi.js": "^1.8.5"
  }
}
